job "glance" {
  datacenters = ["dc1"]

  group "glance" {
    count = 1

    network {
      mode = "host"
      port "http" {
        to     = "8080"
      }
    }

    service {
      name = "glance"
      port = "http"
      provider = "nomad"

      tags = [
        "traefik.enable=true",
        "traefik.http.routers.http.rule=PathPrefix(`/`)",
      ]

      check {
        type     = "http"
        path     = "/"
        interval = "2s"
        timeout  = "2s"
      }
    }

    task "server" {
      driver = "podman"

      config {
        privileged = true
        image = "docker.io/glanceapp/glance"
        ports = ["http"]
        volumes = [
          "local/config:/app/config",
        ]
      }

