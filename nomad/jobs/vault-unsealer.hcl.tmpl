job "vault-unsealer" {
 datacenters = ["dc1"]

 type        = "service"

 group "vault-unsealer" {
   count = 1

   task "vault-unsealer" {
     driver = "docker"
     config {
       image      = "devopsrob/vault-unsealer:0.2"
       command = "./vault-unsealer"
       volumes = [
         "local/config:/app/config"
       ]
     }
     template {
       data = <<EOH
 
{
 "log_level": "debug",
 "probe_interval": 10,
 "nodes": [
{{- $nodes := nomadService "vault" }}
{{- range $i, $e := $nodes }}
   {{- if $i }},{{ end }}
   "http://{{ .Address }}:{{ .Port }}"
{{- end }}
 ],
 "unseal_keys": [
   {{- with nomadVar "nomad/jobs/vault-unsealer" }}
   "{{ .key1 }}"
   {{- end }}
 ]
}
EOH
        destination = "local/config/config.json"
     }
     resources {
       cpu    = 100
       memory = 512
     }
   }
 }
}